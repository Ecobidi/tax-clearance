<%-include ("partials/top") %>
<div class="row space">
  <div class="col-12">
    <form action="/tax_payers/new" method="POST" class="px-3 bg-white">
      <div>
        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong><%= error_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>
      <div>
        <% if (success_msg && success_msg.length > 0) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong><%= success_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>

      <fieldset class="border p-2 rounded row">
        <legend>Tax Payer Bio</legend>
        <div class="form-group col-md-4">
          <label>Surname: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="surname">
        </div>
        <div class="form-group col-md-4">
          <label>First Name: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="first_name">
        </div>
        <div class="form-group col-md-4">
          <label>Middle Name: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="middle_name">
        </div>
        <div class="form-group col-md-4">
          <label>Email: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group col-md-4">
          <label>Phone: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="phone">
        </div>
        <div class="form-group col-md-4">
          <label>Residential Address: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="address">
        </div>
        <div class="form-group col-md-4">
          <label>City: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="city">
        </div>
        <div class="form-group col-md-4">
          <label>State: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="state">
        </div>
      </fieldset>

      <fieldset class="border p-2 rounded row">
        <legend>Employment Information</legend>
        <div class="form-group col-md-4">
          <label>Employment Status: <strong class="text-danger">*</strong></label>
          <select class="form-control" name="employment_status">
            <option></option>
            <option value="employed">Employed</option>
            <option value="self-employed">Self-employed</option>
            <option value="under-employed">Under-employed</option>
            <option value="unemployed">Unemployed</option>
          </select>
        </div>
        <div class="form-group col-md-4">
          <label>Job Title: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="job_title">
        </div>
        <div class="form-group col-md-4">
          <label>Salary Grade Level: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="salary_grade_level">
        </div>
        <% /* %>
        <div class="form-group col-md-4">
          <label>Photo: <strong class="text-danger">*</strong></label>
          <input type="file" class="form-control" name="photo" accept="image/*">
        </div>
        <% */ %>
      </fieldset>
      
      <div class="form-group mt-4">
        <button class="btn btn-primary btn-block" type="submit">Add Tax Payer</button>
      </div>
    </form>
  </div>
</div>

</main>

<%-include ("partials/bottom") %>